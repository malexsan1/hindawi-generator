{
  "name": "component-<%= componentName %>",
  "description": "<%= description %>",
  "version": "<%= projectVersion %>",
  "license": "MIT",
  "author": "Hindawi Limited",
  "main": "index.js",
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/hindawi/xpub/xpub-review",
    "path": "packages/component-<%= componentName %>"
  },
  "dependencies": {
    "@pubsweet/ui": "^9.0.3",
    "@pubsweet/ui-toolkit": "^2.0.3",
    "graphql-tag": "^2.10.0",
    "pubsweet-server": "^10.1.4",
    "react": "^16.7.0",
    "react-apollo": "^2.3.3",
    "react-dom": "^16.7.0",
    "recompose": "^0.30.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "babel-jest": "^23.6.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-styled-components": "^6.3.1",
    "react-test-renderer": "^16.7.0"
  },
  "jest": {
    "rootDir": "../..",
    "verbose": false,
    "testMatch": [
      "<rootDir>/packages/component-<%= componentName %>/**/tests/**/*.test.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@pubsweet|xpub-journal|xpub-validators)/)"
    ],
    "testURL": "http://localhost/",
    "setupTestFrameworkScriptFile": "./packages/component-<%= componentName %>/config/jest-setup.js",
    "transform": {
      "\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.s?css$": "identity-obj-proxy"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
